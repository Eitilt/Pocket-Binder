	<!-- Types -->
	<type id="mane">
		<display>@string/mlp_type_mane</display>

		<data id="common">
			<string name="title">
				<display>@string/mlp_label_title</display>
				<unindexed />
			</string>
			<string name="subtitle">
				<display>@string/mlp_label_subtitle</display>
				<unindexed />
			</string>

			<elem id="color">
				<display>@string/mlp_label_mane_color</display>
			</elem>

			<elem id="keywords">
				<display>@string/mlp_label_mane_keywords</display>
				<min>0</min>
			</elem>

			<struct name="traits">
				<display>@string/mlp_label_mane_traits</display>

				<elem id="trait.friend">
					<index />
				</elem>
				<boolean name="primary">
					<mincount>1</mincount>
					<maxcount>1</maxcount>
				</boolean>

				<min>1</min>
			</struct>
		</data>
		<data id="side" name="front">
			<elem id="status">
				<display>@string/mlp_label_mane_side</display>
				<dataindex />
			</elem>

			<html name="flavor">
				<display>@string/mlp_label_flavor</display>
				<unindexed />
			</html>

			<int name="power">
				<display>@string/mlp_label_mane_power</display>
			</int>

			<struct name="gametext">
				<display>@string/mlp_label_mane_gametext</display>

				<elem id="timing">
					<max>1</max>
					<index />
				</elem>

				<string name="effect" />
			</struct>

			<int name="homelimit">
				<display>@string/mlp_label_mane_homelimit</display>

				<!-- The GenCon cards don't have this info -->
				<max>1</max>
			</int>
		</data>
		<data id="side" name="back" />

		<index id="title_full">
			<display>@string/mlp_label_title_full</display>

			<elem id="common.title">1</elem>
			<elem id="common.subtitle">2</elem>

			<format>@string/mlp_format_label_title_full</format>
